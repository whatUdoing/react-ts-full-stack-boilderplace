{
	"name": "full-stack-ts-boilerplate",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"client:watch": "webpack --env.development --progress",
		"test": "jest",
		"testWatch": "jest --watch --notify",
		"all:watch": "concurrently  'npm run server:watch' 'npm run client:watch'",
		"server:watch": "nodemon",
		"server:build": "ts-node src/index.ts"
	},
	"nodemonConfig": {
		"ignore": [
			".git",
			"node_modules"
		],
		"watch": [
			"src/web/server"
		],
		"exec": "npm run server:build",
		"ext": "ts"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@types/express": "^4.17.2",
		"@types/node": "^12.12.7",
		"@types/react": "^16.9.11",
		"@types/react-dom": "^16.9.4",
		"babel-loader": "^8.0.6",
		"clean-webpack-plugin": "^3.0.0",
		"concurrently": "^5.0.0",
		"css-loader": "^3.2.0",
		"html-webpack-plugin": "^3.2.0",
		"source-map-loader": "^0.2.4",
		"style-loader": "^1.0.0",
		"ts-loader": "^6.2.1",
		"ts-node": "^8.5.0",
		"typescript": "^3.7.2",
		"webpack": "^4.41.2",
		"webpack-cli": "^3.3.10",
		"webpack-merge": "^4.2.2"
	},
	"dependencies": {
		"consola": "^2.11.0",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"react": "^16.11.0",
		"react-dom": "^16.11.0"
	}
}
